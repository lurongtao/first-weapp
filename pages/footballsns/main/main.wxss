.main-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.main-list {
  flex: 1;
  overflow: hidden;
}

.main-list scroll-view {
  height: 100%;
}

.main-list scroll-view button {
  font-size: 14px;
  border: 0;
}

.main-list ul {
  display: flex;
  flex-wrap: wrap;
  padding: 4px 4px 4px 0;
}

.main-list ul navigator {
  box-sizing: border-box;
  width: 50%;
  padding-left: 4px;
}

.main-list ul li image {
  width: 100%;
  height: 180px;
}

.main-list ul li b {
  display: block;
  padding: 4px;
}

.main-list .main-list-life,
.main-list .main-list-girl {
  display: flex;
  align-items: center;
  justify-content: center;
}

@media screen and (max-width: 321px) {
  .main-list ul li {
    font-size: 14px;
  }
}

@media screen and (min-width: 322px) and (max-width: 400px) {
  .main-list ul li {
    font-size: 15px;
  }
}

@media screen and (min-width: 400px) {
  .main-list ul li {
    font-size: 16px;
  }
}

.main-nav{
  height: 35px;
  background-color: #fff;
}

.main-nav ul {
  height: 35px;
  display: flex;
}

.main-nav ul li {
  height: 35px;
  flex: 1;
  line-height: 35px;
  text-align: center;
  border-bottom: solid 1px #d9d9d9;
  font-size: 14px;
  box-sizing: border-box;
}

.main-nav ul li.active {
  border-bottom: solid 2px #0dc441;
  color: #0dc441;
}

